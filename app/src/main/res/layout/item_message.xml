<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/imageViewAvatar"
        android:layout_width="50dp"
        android:layout_height="50dp"

        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"

        android:adjustViewBounds="false"
        android:cropToPadding="false"
        app:srcCompat="@mipmap/ic_launcher"/>


    <TextView
        android:id="@+id/textViewUserFrom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_toRightOf="@+id/imageViewAvatar"
        android:layout_toEndOf="@+id/imageViewAvatar"

        android:layout_gravity="center"
        android:text="TextView"
        android:textAlignment="center"/>

    <TextView
        android:id="@+id/textViewLabelA"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_toRightOf="@+id/textViewUserFrom"
        android:layout_toEndOf="@+id/textViewUserFrom"

        android:layout_gravity="center"
        android:text=" Ã  "
        android:textAlignment="center"/>

    <TextView
        android:id="@+id/textViewUserTo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_toRightOf="@+id/textViewLabelA"
        android:layout_toEndOf="@+id/textViewLabelA"

        android:layout_gravity="center"
        android:text="TextView"
        android:textAlignment="center"/>


    <TextView
        android:id="@+id/textViewDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"

        android:text="TextView"
        android:textColor="@color/colorMessageText"/>

    <TextView
        android:id="@+id/textViewMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_toEndOf="@+id/imageViewAvatar"
        android:layout_toRightOf="@+id/imageViewAvatar"
        android:layout_below="@id/textViewUserFrom"

        android:layout_centerVertical="true"

        android:text="TextView"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/colorMessageText"/>

</RelativeLayout>